def currency_rates(*args):
    import requests
    from datetime import datetime

    response = requests.get('http://www.cbr.ru/scripts/XML_daily.asp').text

    date_index = response.index('Date')
    date_slice = response[date_index + 6:date_index + 16]
    date_list = date_slice.split('.')
    date = datetime(year=int(date_list[2]), month=int(date_list[1]), day=int(date_list[0]))
    print(date)

    response = response.replace(',', '.').split('</Value>')
    dict = {}
    for i in args:
        i = i.upper()
        for element in response:
            if i in element:
                currency_rate = float(element.split('>')[-1])
                dict[i] = currency_rate
                break
        else:
            dict[i] = None

    print(dict)

currency_rates('USD', 'eur', 'qwe')
